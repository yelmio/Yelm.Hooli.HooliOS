<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".old_version.user.UserDataActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/user_data"
                android:textColor="@color/colorText"
                android:textSize="36sp"
                android:textStyle="bold"
                android:theme="@style/ProDisplayTextStyle" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:text="@string/sent_your_data_to_contact"
                android:textSize="16sp"
                android:theme="@style/ProDisplayTextStyle" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="@string/user_fio"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/ProDisplayTextStyle" />

            <androidx.cardview.widget.CardView
                style="@style/CardViewCustomStyle"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <EditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_person_24"

                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:hint="@string/what_is_your_name"
                    android:inputType="textPersonName"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColorHint="#A8A7A7"
                    android:theme="@style/ProDisplayTextStyle" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/phone"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/ProDisplayTextStyle" />

            <androidx.cardview.widget.CardView
                style="@style/CardViewCustomStyle"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <EditText
                    android:id="@+id/userPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_phone_24"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:hint="@string/user_phone"
                    android:inputType="phone"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColorHint="#A8A7A7"
                    android:theme="@style/ProDisplayTextStyle" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/your_address"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/ProDisplayTextStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    style="@style/CardViewCustomStyle"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/userAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_home_24"
                        android:drawablePadding="8dp"
                        android:ems="10"
                        android:hint="@string/address"
                        android:inputType="textPostalAddress"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:textColorHint="#A8A7A7"
                        android:theme="@style/ProDisplayTextStyle" />
                </androidx.cardview.widget.CardView>

                <ImageButton
                    android:id="@+id/openMap"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/custom_button"
                    android:elevation="4dp"
                    android:src="@drawable/ic_near_me_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/additional_information"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/ProDisplayTextStyle" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="2"
                    app:rowCount="2">

                    <androidx.cardview.widget.CardView
                        style="@style/CardViewCustomStyle"

                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="6dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <EditText
                            android:id="@+id/userOffice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:hint="@string/office"
                            android:inputType="textPersonName"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:theme="@style/ProDisplayTextStyle" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/CardViewCustomStyle"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="16dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <EditText
                            android:id="@+id/userIntercom"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:hint="@string/intercom"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:theme="@style/ProDisplayTextStyle" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/CardViewCustomStyle"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="6dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <EditText
                            android:id="@+id/userEntrance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:hint="@string/entrance"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:theme="@style/ProDisplayTextStyle" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/CardViewCustomStyle"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="16dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <EditText
                            android:id="@+id/userFloor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:hint="@string/floor"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:theme="@style/ProDisplayTextStyle" />
                    </androidx.cardview.widget.CardView>
                </androidx.gridlayout.widget.GridLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveUserData"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/colorBackgroundGray"
                android:fontFamily="@font/zmiin_phh3l"
                android:text="@string/save_user_data"
                android:textAllCaps="false"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                app:cornerRadius="12dp" />

            </LinearLayout>




    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>