<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/sf_prodisplay_regular"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="sender"
        android:textColor="@color/colorChatMessageTextSender"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_message_right"
        android:includeFontPadding="false"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="message"
        android:textColor="@color/white"
        android:textIsSelectable="true"
        android:textSize="16sp"
        android:theme="@style/ProDisplayTextStyle" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/sf_prodisplay_regular"
        android:singleLine="true"
        android:text="date"
        android:textColor="@color/colorChatMessageTextSender"
        android:textSize="14sp" />

</LinearLayout>


