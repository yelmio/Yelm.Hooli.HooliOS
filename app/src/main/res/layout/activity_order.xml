<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order.OrderActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/order"
                android:textColor="@color/colorText"
                android:textSize="36sp"
                android:textStyle="bold"
                android:theme="@style/ProDisplayTextStyle" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/my_info"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/ProDisplayTextStyle" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:text="@string/sent_your_data_to_contact"
                android:textSize="16sp"
                android:theme="@style/ProDisplayTextStyle" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/user_fio"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/ProDisplayTextStyle" />

            <androidx.cardview.widget.CardView
                style="@style/CardViewCustomStyle"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <EditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_person_24"

                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:hint="@string/what_is_your_name"
                    android:inputType="textPersonName"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColorHint="#A8A7A7"
                    android:theme="@style/ProDisplayTextStyle" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/phone"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/ProDisplayTextStyle" />

            <androidx.cardview.widget.CardView
                style="@style/CardViewCustomStyle"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <EditText
                    android:id="@+id/userPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_phone_24"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:hint="@string/user_phone"
                    android:inputType="phone"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColorHint="#A8A7A7"
                    android:theme="@style/ProDisplayTextStyle" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/logistics"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:theme="@style/ProDisplayTextStyle" />

                <androidx.cardview.widget.CardView
                    style="@style/CardViewCustomStyle"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_car" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/separator"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="@color/colorSeparatorLogistic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="@string/delivery"
                                android:textColor="@color/colorText"
                                android:textSize="16sp"
                                android:theme="@style/ProDisplayTextStyle" />

                            <TextView
                                android:id="@+id/minOrderPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="49"
                                android:textColor="@color/colorText"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:theme="@style/ProDisplayTextStyle" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="0dp"
                    android:layout_height="0dp"

                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="@string/i_have_delivery"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:theme="@style/ProDisplayTextStyle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/deliveryButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/deliveryButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_pin_blue_24" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/pickupAddress"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:hint="@string/select_pickup_point"
                    android:paddingStart="16dp"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:theme="@style/ProDisplayTextStyle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/addressButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/addressButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_pin_gray_24" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/getAddressPickup"
                style="@style/CustomTextPayButton"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/background_toggle_buttons"
                android:text="@string/сhoose_pickup_point"
                android:textAllCaps="false"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:backgroundTint="@color/buttonBack"
                app:icon="@drawable/ic_pin_blue_24"
                app:iconTint="@color/colorIconOrder" />

            <LinearLayout
                android:id="@+id/extraData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/your_address"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:theme="@style/ProDisplayTextStyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        style="@style/CardViewCustomStyle"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="24dp"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/userAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:drawableStart="@drawable/ic_home_24"
                            android:drawablePadding="8dp"
                            android:focusable="false"
                            android:hint="@string/order_select_on_the_map"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:singleLine="true"
                            android:textColorHint="#A8A7A7"
                            android:theme="@style/ProDisplayTextStyle"
                            android:visibility="visible" />
                    </androidx.cardview.widget.CardView>

                    <ImageButton
                        android:id="@+id/openMap"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/custom_rounded_button"
                        android:elevation="4dp"
                        app:srcCompat="@drawable/ic_near_me_24" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/additional_information"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:theme="@style/ProDisplayTextStyle" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="2"
                    app:rowCount="2">

                    <androidx.cardview.widget.CardView
                        style="@style/CardViewCustomStyle"

                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="6dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <EditText
                            android:id="@+id/userOffice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:hint="@string/office"
                            android:inputType="textPersonName"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:theme="@style/ProDisplayTextStyle" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/CardViewCustomStyle"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="16dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <EditText
                            android:id="@+id/userIntercom"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:hint="@string/intercom"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:theme="@style/ProDisplayTextStyle" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/CardViewCustomStyle"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="8dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <EditText
                            android:id="@+id/userEntrance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:hint="@string/entrance"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:theme="@style/ProDisplayTextStyle" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/CardViewCustomStyle"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1">

                        <EditText
                            android:id="@+id/userFloor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:hint="@string/floor"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:theme="@style/ProDisplayTextStyle" />
                    </androidx.cardview.widget.CardView>
                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bonusLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">

                <Switch
                    android:id="@+id/bonusSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bonus_point"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"

                    android:textStyle="bold"

                    android:theme="@style/SwitchStyle"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <SeekBar
                        android:id="@+id/seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/SeekBarColor" />

                    <TextView
                        android:id="@+id/progressBonus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorText"
                        android:textSize="18sp"
                        android:theme="@style/ProDisplayTextStyle" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/cancel"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_cancel" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment2"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:theme="@style/ProDisplayTextStyle" />

                <TextView
                    android:id="@+id/strikeThroughTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:theme="@style/ProDisplayTextStyle"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textViewTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:theme="@style/ProDisplayTextStyle" />

                <TextView
                    android:id="@+id/bonusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bonus"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:theme="@style/ProDisplayTextStyle"
                    android:visibility="gone" />
            </LinearLayout>


            <Button
                android:id="@+id/payButton"
                style="@style/CustomTextPayButton"
                android:layout_width="300dp"

                android:layout_height="46dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="64dp"
                android:layout_marginBottom="38dp"
                android:background="@drawable/background_toggle_buttons"
                android:text="@string/cheсkout_in_cash"
                android:textAllCaps="false"
                android:textColor="#0E0E0E"
                android:textSize="16sp"
                android:visibility="gone"
                app:backgroundTint="@color/buttonBack"
                app:iconGravity="textStart" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/background_toggle_buttons"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                app:layout_constraintBottom_toTopOf="@+id/pager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorColor="#FFFFFF"
                app:tabIndicatorHeight="40dp"
                app:tabRippleColor="@null"
                app:tabTextAppearance="@style/MineCustomTabText"
                app:tabTextColor="#050505">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/gp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="4dp"


                    android:text="@string/googlepay_button_content_description" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/cr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/ch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cash" />
            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>